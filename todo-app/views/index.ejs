<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>To-do app</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="/css/styles.css" rel="stylesheet">
    <script>
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
        function updateTodo(id,isCompleted){
            fetch(`/todos/${id}`,{
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({_csrf: token, completed: isCompleted})
    
            }).then((res) => {
                if (res.ok)
                    window.location.reload();
            }).catch((err) => {
                console.error(err);
            });
        }

        function deleteTodo(id) {
            fetch(`/todos/${id}`, {
                method: 'DELETE',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ "_csrf": token })
            }).then((res) => {
                if (res.ok) {
                    window.location.reload();
                }
            }).catch((err) => {
                console.error(err);
            });
        }
    </script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <form action="/todos" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="flex gap-2 py-4">
                    <div class="flex-auto">
                        <input type="text" name="title" placeholder="What's next?" required class="border border-gray-300 rounded text-gray-900 w-full text-sm p-2 "/>
                    </div>
                    <div class="flex-auto">
                        <input type="date" required name="dueDate" class="border border-gray-300 rounded text-gray-900 w-full text-sm p-2 leading-4"  />
                    </div>
                    <div class="flex-none">
                        <button type="submit" class="bg-green-600 px-5 py-1.5 text-white rounded font-medium mr-2 mb-2">Add</button>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
    <%- include('todos.ejs') %>
    <%- include('footer.ejs') %>

</body>
</html>